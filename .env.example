# API Endpoints (required)
NEXT_PUBLIC_API_BASE=https://api.qurancdn.com/api/qdc
NEXT_PUBLIC_AUDIO_BASE=https://everyayah.com/data
NEXT_PUBLIC_CACHE_MAX_AGE=3600
NEXT_PUBLIC_CACHE_STALE_WHILE_REVALIDATE=300

# Base URL Configuration (required)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ADSENSE=false
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_DEBUG=true

# Production-only Settings (optional in development)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_ADSENSE_ID=
NEXT_PUBLIC_BASE_PATH=

# Build Configuration (production-only)
# NEXT_PUBLIC_STATIC_EXPORT=true  # Only needed for static hosting platforms

NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Quran25
NEXT_PUBLIC_APP_DESCRIPTION="A modern Quran reading experience"
NEXT_PUBLIC_APP_VERSION=1.0.0

# Security
NEXT_PUBLIC_CSP_NONCE=

# Caching
NEXT_PUBLIC_CACHE_MAX_AGE=3600

# Debugging
DEBUG=false